CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.C=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): %.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f *~

oclean:
	rm -f $(OBJ)

fclean: clean oclean

re: fclean all
